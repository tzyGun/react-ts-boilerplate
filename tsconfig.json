    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ]
}